    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "types": [
      "@types/node",
      "@types/jest"
    ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["**/*.ts"]
}